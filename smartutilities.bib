isbn = {0962-9343 (Print)$\backslash$r0962-9343 (Linking)},
issn = {09629343},
journal = {Quality of Life Research},
keywords = {Clinical importance,Q-TWiST},
number = {3},
pages = {411--423},
pmid = {16547779},
title = {{Analyzing oncology clinical trial data using the Q-TWiST method: Clinical importance and sources for health state preference data}},
